<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="ButtonsRight" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_right_calculator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonsLeft" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/button_left_calculator</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
